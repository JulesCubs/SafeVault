@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Secure Form Submission</h2>
            @if (!string.IsNullOrEmpty(ViewData["Message"]?.ToString()))
            {
                <div class="alert alert-success">@ViewData["Message"]</div>
            }
            
            <form method="post" asp-page-handler="default" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" id="username" name="username" class="form-control" 
                           pattern="^[a-zA-Z0-9_-]{3,20}$"
                           title="Solo caracteres alfanuméricos, guiones y guiones bajos (3-20 caracteres)"
                           required>
                </div>
                
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" 
                           required>
                </div>
                
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
